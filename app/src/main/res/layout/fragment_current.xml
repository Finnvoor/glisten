<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="60dp"
        android:background="#F9F9F9"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/songProgressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="295dp"
        android:layout_height="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="#F9F9F9"
        android:progress="50"
        android:scrollbarSize="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/currentSongTitle"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Song"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/currentArtist"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Artist"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/currentSongTitle"
        app:layout_constraintTop_toBottomOf="@+id/currentSongTitle" />

    <TextView
        android:id="@+id/albumName"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:text="Album"
        app:layout_constraintStart_toStartOf="@+id/currentArtist"
        app:layout_constraintTop_toBottomOf="@+id/currentArtist" />

    <TextView
        android:id="@+id/releaseYear"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Year"
        app:layout_constraintStart_toEndOf="@+id/albumName"
        app:layout_constraintTop_toBottomOf="@+id/currentArtist" />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="75dp"
        android:layout_height="21dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="0:00"
        app:layout_constraintStart_toStartOf="@+id/songProgressBar2"
        app:layout_constraintTop_toBottomOf="@+id/songProgressBar2" />


    <TextView
        android:id="@+id/wholeTime"
        android:layout_width="75dp"
        android:layout_height="21dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="0:00"
        app:layout_constraintStart_toEndOf="@+id/songProgressBar2"
        app:layout_constraintTop_toBottomOf="@+id/songProgressBar2" />

</androidx.constraintlayout.widget.ConstraintLayout>