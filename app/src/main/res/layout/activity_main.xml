<?xml version="1.0" encoding="utf-8"?>
<!-- Start-up-page -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/start_up_pa"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/start_up_pa">


    <!-- header-->

    <View
        android:id="@+id/header"
        android:layout_width="432dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/header"
     />



    <!-- log in button-->
    <Button
        android:id="@+id/loginbutton"
        android:layout_width="256dp"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="324dp"
        android:background="#00000000"

        />


        <Button
            android:id="@+id/loginbubble"
            android:layout_width="256dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="324dp"
            android:background="@drawable/loginbubble"
            android:text ="@string/log_in"
            android:textAppearance="@style/log_in"
            />


    <!-- Sign up Button -->

    <Button
        android:id="@+id/signupbutto"
        android:layout_width="256dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="396dp"
        android:background="#00000000"

        />

            <!-- signUpBubble -->
        <Button
        android:id="@+id/signupbubbl"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="396dp"
        android:background="@drawable/signupbubbl"
        android:text ="@string/sign_up"
        android:textAppearance="@style/sign_up"/>

    <!-- Logo  -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="183dp"
        android:layout_below="@+id/header"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="51dp"
        app:srcCompat="@drawable/logo_image" />


</RelativeLayout>