<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_in_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/log_in_page">

    <View
        android:id="@+id/header2"
        android:layout_width="432dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/header"
        />

    <Button
        android:id="@+id/rectangle_4"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="403dp"
        android:background="@drawable/login"
        android:text ="@string/log_in2"
        android:textAppearance="@style/log_in2"
        />

    <EditText
        android:id="@+id/plain_text_input"
        android:layout_marginTop="200dp"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="194dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="179dp"
        android:text="@string/email"
        android:textAppearance="@style/email"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/password"
        android:layout_width="194dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="69dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="278dp"
        android:text="@string/password"
        android:textAppearance="@style/email"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/plain_text_input2"
        android:layout_marginTop="300dp"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:inputType="text"/>

</RelativeLayout>