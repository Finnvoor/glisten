
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/host_page">

    <EditText
        android:id="@+id/room_code"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btn_check_in_room"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="190dp"
        android:layout_toStartOf="@+id/btn_enter"
        android:layout_toLeftOf="@+id/btn_enter"
        android:background="@drawable/guest_button"
        android:gravity="center"
        android:hint="@string/room_code"
        android:inputType="number"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="">

    </EditText>

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_check_in_room"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="190dp"
        android:background="@drawable/bg_btn"
        android:text="@string/enter"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/room_code"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/btn_check_in_room"
        android:layout_width="331dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/bg_btn"
        android:text="@string/already_in_one_room_click_here"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/ask_host_to_share_the_group_code_with_you"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_code" />

</androidx.constraintlayout.widget.ConstraintLayout>


