<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HostActivity"
    android:id="@+id/new_session"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_session">


    <TextView
        android:id="@+id/start_new_s"
        android:layout_width="195dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="193dp"
        android:gravity="center"
        android:text="@string/start_new_s"
        android:textAppearance="@style/start_new_s" />



    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="250dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:color="#114279"

        android:padding = "0dp"
        android:cropToPadding="true"
        app:srcCompat="@drawable/djdisk"
        android:contentDescription="@string/todo" />


    <Button
        android:id="@+id/check_current_room"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="506dp"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:text="Already own one?\nClick this!"
        android:textAppearance="@style/start_new_s" />

</RelativeLayout>